SRC_DIR_F070 += \
	$(HAL_FOLDER_F070)/Startup \
	$(HAL_FOLDER_F070)/Src \
	$(HAL_FOLDER_F070)/Drivers/STM32F0xx_HAL_Driver/Src

CFLAGS_F070 := \
	-I$(HAL_FOLDER_F070)/Inc \
	-I$(HAL_FOLDER_F070)/Drivers/STM32F0xx_HAL_Driver/Inc \
	-I$(HAL_FOLDER_F070)/Drivers/CMSIS/Include \
	-I$(HAL_FOLDER_F070)/Drivers/CMSIS/Device/ST/STM32F0xx/Include

CFLAGS_F070 += \
	-DHSE_VALUE=8000000 \
	-DSTM32F070xB \
	-DHSE_STARTUP_TIMEOUT=100 \
	-DLSE_STARTUP_TIMEOUT=5000 \
	-DLSE_VALUE=32768 \
	-DDATA_CACHE_ENABLE=0 \
	-DINSTRUCTION_CACHE_ENABLE=0 \
	-DVDD_VALUE=3300 \
	-DLSI_VALUE=40000 \
	-DHSI_VALUE=8000000 \
	-DUSE_FULL_LL_DRIVER \
	-DPREFETCH_ENABLE=1

SRC_F070 := $(foreach dir,$(SRC_DIR_F070),$(wildcard $(dir)/*.[cs]))
